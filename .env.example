# Security Configuration Template
# Copy this file to .env and update with your secure values

# Core Security Settings
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-32-CHAR-KEY
ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_USER=secure_app_user
DB_PASS=your-secure-database-password-here
DB_NAME=security_database

# SSL/TLS Certificate Paths
SSL_CERT_PATH=/path/to/ssl/certificate.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CA_PATH=/path/to/ssl/ca.pem

# Email Configuration for Security Notifications
SMTP_HOST=smtp.academmia.store
SMTP_PORT=587
SMTP_USER=security@academmia.store
SMTP_PASS=your-smtp-password
SMTP_ENCRYPTION=tls

# Logging Configuration
LOG_LEVEL=warning
LOG_FILE=/var/log/security/auth.log
SYSLOG_FACILITY=auth

# Rate Limiting (Redis Configuration)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Session Configuration
SESSION_TIMEOUT=900
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# Security Thresholds
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_WINDOW=300
TOKEN_EXPIRY=3600
BCRYPT_ROUNDS=12

# Domain Whitelist (comma-separated)
ALLOWED_DOMAINS=webmail-auth001.academmia.store,mail.academmia.store,secure.academmia.store

# Monitoring and Alerting
SECURITY_EMAIL=security@academmia.store
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK